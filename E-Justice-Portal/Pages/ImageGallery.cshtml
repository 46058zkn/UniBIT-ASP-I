@page
@model E_Justice_Portal.Pages.ImageGalleryModel
@{
    ViewData["Title"] = "";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Галерия</h1>

<div class="row">
    <div class="col-md-12">
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <strong>@ViewData["SuccessMessage"]</strong>
            </div>
        }
    </div>
</div>
<div class="row">
    @if (Model.GalleryImages.Count > 0)
    {
        foreach (var image in Model.GalleryImages)
        {
            <div class="col-md-2">
                <div class="thumbnail">
                    <a href="@image.URL" class="thumbnail">
                        <img src="@image.URL" alt="..." width="600">
                    </a>
                    <div class="caption">
                        @if (image.Caption != null)
                        {
                            <p>@image.Caption</p>
                        }
                        else
                        {
                            <p>Без думи</p>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h1>Галерията е празна!</h1>
    }
</div>
<div>
    <a class="nav-link" style="float: right; font-size: large;" asp-page="/ImageUpload">Добавяне на изображение</a><br />
</div>