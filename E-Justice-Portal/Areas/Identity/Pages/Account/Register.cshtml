@page
@model RegisterModel
@{
    ViewData["Title"] = "";
}

<div class="breadcrumbs"><a class="active" title="Начало" asp-page="/Index">Начало</a><span>&nbsp;&gt;&nbsp;</span>Регистрация</div>

<div class="login">
    <div class="locker text-align-center">
        <img src="~/img/icons/register-user.png" alt="" />
        <span class="title">Регистрация</span>
    </div>
    <div class="login-form">
        <span class="title">Регистрация в системата</span>
        <form class="search-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="rw">
                <div class="lbl">Потребителско име:</div>
                <div class="vl">
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Парола:</div>
                <div class="vl">
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Потвърдете паролата:</div>
                <div class="vl">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="rw">
                <div class="lbl">Код за сигурност:</div>
                <div class="vl">
                    <input type="hidden" name="captcha-guid" value="4d74b14bec5b497ab863b69aeb369ac0" />
                    <img src="~/img/captcha3.gif" alt="CAPTCHA" width="150" height="31" />
                </div>
            </div>
            <div class="rw">
                <div class="lbl"> </div>
                <div class="vl">
                    <div class="col-xs-6 no-padding">
                        <input autocomplete="off" id="Captcha" maxlength="5" name="Captcha" type="text" value="" />
                    </div>
                </div>
            </div>
            <div class="rw">
                <div class="lbl"></div>
                <div class="vl">
                    <input type="submit" class="search-submit" value="РЕГИСТРАЦИЯ">
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}